<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="150sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="140dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resetButton"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="247dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="76dp" android:onClick="onReset"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countButton" android:layout_marginEnd="76dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="247dp"
            android:onClick="onCount" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
</android.support.constraint.ConstraintLayout>